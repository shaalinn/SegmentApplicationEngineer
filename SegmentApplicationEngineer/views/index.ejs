    <div class="row" ng-show="username=='finance'">
      <h2>Monthly Overage Bill</h2>
      <p>Following Bills are required to be approved by Finance Admin</p>
      <table class="table">
        <thead>
        <tr>
          <th>Customer Id</th>
          <th>Customer Name</th>
          <th>Billing Address</th>
          <th>Billing Email</th>
          <th>Month</th>
          <th>Year</th>
          <th>Month Limit</th>
          <th>Overage Unites</th>
          <th>Average Unit Price</th>
          <th>Overage Amount</th>
          <th>Start Month</th>
          <th>Start Year</th>
          <th>Approve</th>
          <th>Waive</th>
        </tr>
        </thead>
        <tbody>
        <tr ng-repeat="x in finBill">
          <td>{{ x.CustomerId }}</td>
          <td>{{ x.name }}</td>
          <td>{{ x.billingaddress }}</td>
          <td>{{ x.billingemail }}</td>
          <td>{{ x.month }}</td>
          <td>{{ x.year }}</td>
          <td>{{ x.monthlimit }}</td>
          <td>{{ x.overageUnits }}</td>
          <td>{{ x.overageUnitPrice }}</td>
          <td>{{ x.overageAmounts }}</td>
          <td>{{ x.startMonth }}</td>
          <td>{{ x.startYear }}</td>
          <td> <button type="button" class="btn btn-success btn-md" ng-click="Approve('fin',x.billId)">Approve</button> </td>
          <td> <button type="button" class="btn btn-primary btn-md" ng-click="Waive(x.billId)">Waive</button> </td>
        </tr>
        </tbody>
      </table>
    </div>
    <div class="row" ng-show="username=='finance'">
      <h2>Monthly Overage Bill Approved by Sales Dept</h2>
      <p>Following Bills are approved by Sales Department and invoices are ready to be sent out</p>
      <table class="table">
        <thead>
        <tr>
          <th>Customer Id</th>
          <th>Customer Name</th>
          <th>Billing Address</th>
          <th>Billing Email</th>
          <th>Month</th>
          <th>Year</th>
